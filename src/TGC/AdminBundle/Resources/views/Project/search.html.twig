{% extends 'TGCAdminBundle::formlayout.html.twig' %}

{% block title -%}Search for Projects{% endblock %}

{% block body -%}
    <section class="section form-section">
        <div class="wrapper clearfix">
            <div class="tgc-form search-form">

                {{ form(form) }}
            </div>

			 {% if pagination is null %}
	            <p>&nbsp;</p>
	
	            <p>&nbsp;</p>
	
	        {% elseif pagination is empty %}
	            <p>Your search returned no results. Please try again.</p>
	            <p>&nbsp;</p>
	            <p>&nbsp;</p>
	
	        {% else %}
	        	<div class="browse-projects">
		            <strong>Or browse by sector:</strong>
		            <a href="">All</a>
		            {% for sector in sectors %}
		                <span>|</span> <a href="{{ path('project_search') }}?sector_id={{ sector.id }}">{{ sector.name }}</a>
		            {% endfor %}
	            </div>
	            <div class="projects-grid clearfix">

	                    {% for entity in pagination %}
	                    	<div class="project-item">
			            		<header>
			            			<h2>{{ entity.title }}</h2>
			            			<h3>{{ entity.budget }}</h3>
			            		</header>
			            		<p>Apply until {% if entity.startdate %}{{ entity.startdate|date('Y-m-d') }}{% endif %}</p>
			            		<em>Category</em> 
			            		<a href="{{ path('project_show', { 'id': entity.id }) }}" class='btn white-bordered-btn'>View More</a>
			            	</div>
	                       
	                    {% endfor %}
	            </div>
	        {% endif %}
        </div>
       
    </section>
{% endblock %}

