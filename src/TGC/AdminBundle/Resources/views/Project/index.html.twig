{% extends 'TGCAdminBundle::tablelayout.html.twig' %}

{% block title -%}My Projects{% endblock %}

{% block content -%}
    {# <h1>Project list</h1> #}
    <a class="load_more_jobs" href=
                "{{ path('project_new') }}"><strong>Add A New Project</strong>
                </a>

    {% if entities is not empty %}
    <table class="table table-striped table-bordered dataTable" id="example" aria-describedby="example_info">
        <thead>
            <tr>

                <th class="sorting" role="columnheader" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 238px;" aria-label="Browser: activate to sort column ascending">Project Title</th>
                <th class="sorting" role="columnheader" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 238px;" aria-label="Browser: activate to sort column ascending">Startdate</th>
                <th class="sorting" role="columnheader" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 238px;" aria-label="Browser: activate to sort column ascending">Actions</th>
                <th>Status</th>
                <th>Deadline</th>
                {# <th class="sorting" role="columnheader" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 238px;" aria-label="Browser: activate to sort column ascending">Status</th> #}


{#                 <th class="sorting" role="columnheader" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 238px;" aria-label="Browser: activate to sort column ascending">Actions</th> #}
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                {# <td><a href="{{ path('project_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td> #}
                <td><a href="{{ path('project_edit', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                <td>{% if entity.startdate %}{{ entity.startdate|date('Y-m-d') }}{% endif %}</td>
                <td>
                    {% if entity.status == 1 %}
                        <a href="{{ path('project_proposals', { 'projectid': entity.id }) }}">View Applicants</a>
                    {% else %}
                        Consultant is selected
                    {% endif %}
                    |
                    <a href="{{ path('project_edit', { 'id': entity.id }) }}">Edit Project</a>
                </td>
                <td>
                    {% if entity.status == 1 %}
                        Live
                    {% elseif entity.status == 2 %}
                        In Progress
                    {% else %}
                        Completed
                    {% endif %}
                </td>
                <td>{{ entity.deadline|date('Y-m-d H:i:s') }}</td>

                {# <td>{{ entity.status }}</td> #}



{#                 <td>
                <ul>
                    <li>
                        <a href="{{ path('project_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('project_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td> #}
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
    <h3>You don't have any projects yet. Click the button above to add one.</h3>
    {% endif %}

