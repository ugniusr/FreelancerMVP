{% extends 'TGCAdminBundle::tablelayout.html.twig' %}

{% block title -%}Proposals (applications){% endblock %}

{% block content -%}


{% if entities is not empty %}
    <table class="records_list">
        <thead>
            <tr>

                <th>Consultant</th>
                <th>Coverletter</th>
                <th>Hourlyrate</th>

{#                 <th>Duration</th>
                <th>Registrationtimestamp</th>
                <th>Status</th>
 #}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
{#                 <td><a href="{{ path('proposal_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
 #}
                <td>{{ entity.userid }}</td>
                <td>{{ entity.coverletter }}</td>
                <td>{{ entity.hourlyrate }}</td>

{#                 <td>{{ entity.duration }}</td>
                <td>{% if entity.registrationtimestamp %}{{ entity.registrationtimestamp|date('Y-m-d H:i:s') }}{% endif %}</td>

                <td>{{ entity.status }}</td>
 #}
                <td>
                    <a href="{{ path('project_contract_new', { 'projectid': entity.projectid.id, 'consultant_userid': entity.userid.id }) }}">CHOOSE THIS PROPOSAL FOR HIRING</a> |
                    <a href="{{ path('proposal_show', { 'id': entity.id }) }}">More details...</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
<h3>There are no applications for this project yet.</h3>

{% endif %}
<ul class="record_actions">
    <li>
        <a href="{{ path('project') }}">
            <- Go back to the list of my projects
        </a>
    </li>
{#     <li>{{ form(delete_form) }}</li> #}
</ul>
{% endblock %}
